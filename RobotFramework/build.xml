<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="RobotFramework" basedir="." default="main">
	<mkdir dir="reprots" />

	<target name="main" depends="junit" description="Main target" />

	<target name="junit" description="Run the junit tests">
		<junit printsummary="yes" haltonfailure="yes">
			<batchtest fork="yes" todir="reports">
				<fileset dir="src">
					<include name="**/*.java" />
				</fileset>
			</batchtest>
		</junit>
	</target>

</project>
